
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  password  String
  workflows Workflow[]
}

model Workflow {
  id        String  @id @default(uuid())
  data      Json // Store the React Flow nodes and edges as JSON
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User    @relation(fields: [userId], references: [id])
}

model Credential {
  id        String @id @default(uuid())
}